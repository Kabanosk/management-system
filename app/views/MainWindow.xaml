<Window x:Class="management_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:management_system"
        mc:Ignorable="d"
        Title="Warehouse Management System">
    <Grid Height="711" Width="1471">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="124" Margin="-8,-4,0,0" VerticalAlignment="Top" Width="397" Source="/src/img/logo/dark_logo_transparent_background.png" Grid.ColumnSpan="2"/>
        <Rectangle HorizontalAlignment="Left" Height="711" VerticalAlignment="Center" Width="314" Fill="#194988EC" Grid.ColumnSpan="2"/>
        <Rectangle HorizontalAlignment="Center" Height="115" VerticalAlignment="Top" Width="1472" Fill="#194988EC" Grid.Column="1"/>
        <Button Name="ButtonItems" Background="Coral" 
                Width="108" Height="108" Margin="96,294,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Click="ShowItems" Grid.ColumnSpan="2">
            Items
        </Button>
        <Button Name="ButtonOrders" Background="Coral" 
                Width="106" Height="106" Margin="98,0,0,179"
                HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Click="ShowOrders" Grid.ColumnSpan="2">
            Orders and Extractions
        </Button>
        <ListView Name="DataListView" 
            Width="753" Height="519" Margin="0,0,375,52" 
            HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
            Hello, Sir. Have a nice day!
        </ListView>
        <Button x:Name="ButtonWorkers" Background="Coral" 
                Width="106" Height="103" Margin="98,168,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Click="ShowWorkers" Content="Workers" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
